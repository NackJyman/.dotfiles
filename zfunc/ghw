#!/usr/bin/env bash

open_url () {
    xdg-open "${1}" & disown
}

if [ -n "$1" ]; then
    open_url "$(clone -di $1)" 
    return
fi

url="$(git config --get remote.origin.url)"
if [[ "$url" ]]; then
    # Check if HTTPS
    if [[ "$url" == *"https"* ]]; then
        open_url "$url"
    else
        url="$(echo "$url" | awk 'BEGIN { FS = ":" } ; {print $2}')"
        open_url "https://github.com/$url"
    fi
else
    open_url "$(clone -di $1)"
fi
